{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "jasmine": true,
    "jest": true
  },
  "plugins": [
    "prettier",
    "react"
  ],
  "rules": {
    "prettier/prettier": [
      "error", {
        "trailingComma": "all",
        "singleQuote": true
      }
    ],
    "react/jsx-no-undef": "error",
    "react/jsx-uses-vars": "error"
  }
}
